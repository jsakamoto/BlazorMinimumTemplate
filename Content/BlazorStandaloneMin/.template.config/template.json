{
    "$schema": "http://json.schemastore.org/template",
    "author": "J.Sakamoto",
    "classifications": [
        "Web",
        "Blazor",
        "Standalone"
    ],
    "groupIdentity": "Toolbelt.Web.Blazor.Standalone.Minimum",
    "identity": "Toolbelt.Web.Blazor.Standalone.Minimum.CSharp",
    "name": "Blazor (client-side, minimum)",
    "shortName": "blazormin",
    "sourceName": "BlazorStandaloneMin",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "symbols": {
        "HostIdentifier": {
            "type": "bind",
            "binding": "HostIdentifier"
        },
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        }
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "exclude": [
                ".template.config/**"
            ]
        }
    ],
    "primaryOutputs": [
        {
            "path": "BlazorStandaloneMin.csproj"
        }
    ],
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ]
}